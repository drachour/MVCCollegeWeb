@model IndexViewModel
@{
    ViewData["Title"] = "Course Management";
}

<div class="container mt-5">
    <div class="card mb-2">
        <div class="card-header ">
            <button class="btn btn-primary" id="loadCours" style="width:125px;">Cours</button>
            <button class="btn btn-primary" style="width:125px;">Étudiants</button>
        </div>
        <div class="grid-container"></div>
    </div>
</div>

<div class="modal fade" id="addStudentModal" tabindex="-1" role="dialog" aria-labelledby="addStudentLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addStudentLabel">Ajouter un étudiant</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/coursesection.js" defer></script>
}

